- details = workbasket_settings.main_step_settings

= render "shared/breadcrumbs" do
  .breadcrumbs
    ol
      li
        = link_to "Main menu", root_url
      - if details["reason"].present?
        li
          = link_to "Manage additional codes", additional_codes_url

        li aria-current="page"
          = link_to "Work with selected additional codes", current_url
      - elsif workbasket.submitted?
        li aria-current="page"
          | View additional codes
      - else
        li aria-current="page"
          | Create new additional codes